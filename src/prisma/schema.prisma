generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// https://www.prismabuilder.io/

model User {
  vk_id           Int               @id @unique
  description     String
  city            String
  my_sex          Sex
  my_age          Int
  my_achievements UserAchievement[]
  my_pet          UserPet           @relation(fields: [userPetId], references: [id])
  userPetId       Int
  UserInterests   UserInterests[]
}

model Pet {
  pet_id  Int       @id @unique @default(autoincrement())
  name    String
  image   String
  UserPet UserPet[]
}

model Swipes {
  id    Int     @id @unique @default(autoincrement())
  from  Int
  To    Int
  liked Boolean @default(false)
}

model Achievement {
  achievement_id  Int               @id @unique @default(autoincrement())
  title           String
  description     String
  UserAchievement UserAchievement[]
}

model UserAchievement {
  achievment_id             Int         @id @unique @default(autoincrement())
  user                      User        @relation(fields: [userVk_id], references: [vk_id])
  achievment                Achievement @relation(fields: [achievementAchievement_id], references: [achievement_id])
  count                     Int         @default(0)
  userVk_id                 Int
  achievementAchievement_id Int
}

model UserInterests {
  id         Int      @id
  user       User     @relation(fields: [userVk_id], references: [vk_id])
  interest   Interest @relation(fields: [interestId], references: [id])
  userVk_id  Int
  interestId Int
}

model Interest {
  id            Int             @id @unique @default(autoincrement())
  title         String
  UserInterests UserInterests[]
}

model UserPet {
  id           Int    @id @unique @default(autoincrement())
  pet_sex      Sex
  pet_name     String
  pet_age      Int
  pet          Pet    @relation(fields: [petPet_id], references: [pet_id])
  User         User[]
  pet_breed_id Int
  petPet_id    Int
}

enum Sex {
  female
  male
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// https://www.prismabuilder.io/

model User {
  vk_id           Int               @id @unique
  description     String
  interests       Interest[]
  city            String
  my_sex          Sex
  my_age          Int
  my_achievements UserAchievement[]
  my_pets         UserPet[]
}

model Pet {
  pet_id  Int       @id @unique @default(autoincrement())
  name    String
  UserPet UserPet[]
}

model Swipes {
  id    String  @unique @default(cuid())
  from  Int     @id @unique
  To    Int
  liked Boolean @default(false)
}

model Achievement {
  achievement_id  Int               @id @unique @default(autoincrement())
  title           String
  description     String
  UserAchievement UserAchievement[]
}

model UserAchievement {
  achievment_id             String      @id @unique @default(cuid())
  user                      User        @relation(fields: [userVk_id], references: [vk_id])
  achievment                Achievement @relation(fields: [achievementAchievement_id], references: [achievement_id])
  count                     Int         @default(0)
  userVk_id                 Int
  achievementAchievement_id Int
}

model Interest {
  id        String @id @unique @default(cuid())
  title     String
  User      User?  @relation(fields: [userVk_id], references: [vk_id])
  userVk_id Int?
}

model UserPet {
  id        String @id @unique @default(cuid())
  pet_sex   Sex
  pet_name  String
  pet_age   Int
  pet       Pet    @relation(fields: [petPet_id], references: [pet_id])
  User      User?  @relation(fields: [userVk_id], references: [vk_id])
  userVk_id Int?
  petPet_id Int
}

enum Sex {
  female
  male
}
